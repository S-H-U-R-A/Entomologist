<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:background="@color/color_outline_variant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_count_insect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="03"
            android:layout_marginStart="16dp"
            android:textColor="@color/color_on_primary"
            android:background="@drawable/circle_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_header_insect"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:text="Hormiga"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toEndOf="@id/mtv_count_insect"
            app:layout_constraintTop_toTopOf="@id/iv_avatar_insect"
            app:layout_constraintEnd_toStartOf="@+id/iv_avatar_insect"
            app:layout_constraintBottom_toTopOf="@id/mtv_subheader_insect"
            app:layout_constraintVertical_chainStyle="packed"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_subheader_insect"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:textSize="14sp"
            android:text="Ciudad 0/00/0000"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/mtv_header_insect"
            app:layout_constraintTop_toBottomOf="@id/mtv_header_insect"
            app:layout_constraintEnd_toEndOf="@+id/mtv_header_insect"
            app:layout_constraintBottom_toBottomOf="@id/iv_avatar_insect"/>

        <ImageView
            android:id="@+id/iv_avatar_insect"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/insect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>