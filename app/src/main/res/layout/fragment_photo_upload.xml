<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.PhotoUploadFragment">

    <ImageView
        android:id="@+id/iv_avatar_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_upload_photo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Subir foto de perfil"
        android:layout_marginTop="60dp"
        style="@style/Widget.Material3.Button.ElevatedButton"
        app:layout_constraintStart_toStartOf="@+id/iv_avatar_user"
        app:layout_constraintEnd_toEndOf="@+id/iv_avatar_user"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar_user"/>

</androidx.constraintlayout.widget.ConstraintLayout>