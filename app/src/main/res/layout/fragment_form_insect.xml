<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.formInsect.FormInsectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.formInsect.FormInsectFragment">

        <include
            android:id="@+id/layout_avatar_profile"
            layout="@layout/avatar_profile"/>

        <ImageButton
            android:id="@+id/ib_avatar_insect"
            android:background="@drawable/ic_no_avatar_insect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Selección de imagen" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name_insect"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="79dp"
            android:hint="Especie"
            app:endIconMode="clear_text"
            app:endIconDrawable="@drawable/ic_trailing"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ib_avatar_insect"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/mactv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_info"
            android:layout_width="0dp"
            android:text="Información adicional"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="89dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_name_insect"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_info"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="46dp"
            android:hint="|URL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mtv_info"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_info"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_selected_insect"
            android:layout_width="123dp"
            android:layout_height="40dp"
            android:text="Seleccionar"
            android:textStyle="bold"
            android:layout_marginTop="150dp"
            android:layout_marginHorizontal="120dp"
            android:visibility="gone"
            style="@style/Widget.Material3.Button.ElevatedButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_info"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_save_insect"
            android:layout_width="123dp"
            android:layout_height="40dp"
            android:text="Guardar"
            android:textStyle="bold"
            android:layout_marginTop="150dp"
            android:layout_marginHorizontal="156dp"
            android:visibility="gone"
            style="@style/Widget.Material3.Button.ElevatedButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_info"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
