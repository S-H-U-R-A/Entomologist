<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.editInsect.EditInsectFragment">

    <include
        android:id="@+id/layout_avatar_profile"
        layout="@layout/avatar_profile"/>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        android:background="@color/color_surface"
        android:layout_marginTop="160dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtv_count_insect"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                tools:text="03"
                android:layout_marginStart="16dp"
                android:textColor="@color/color_on_primary"
                android:background="@drawable/circle_background"
                android:backgroundTint="?attr/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/iv_avatar_insect"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtv_name_insect"
                android:layout_width="0dp"
                android:layout_height="24dp"
                tools:text="Hormiga"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toEndOf="@id/mtv_count_insect"
                app:layout_constraintTop_toTopOf="@id/iv_avatar_insect"
                app:layout_constraintEnd_toStartOf="@+id/iv_avatar_insect"
                app:layout_constraintBottom_toTopOf="@id/mtv_subHeader_insect"
                app:layout_constraintVertical_chainStyle="packed"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtv_subHeader_insect"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:textSize="14sp"
                tools:text="Ciudad 0/00/0000"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/mtv_name_insect"
                app:layout_constraintTop_toBottomOf="@id/mtv_name_insect"
                app:layout_constraintEnd_toEndOf="@+id/mtv_name_insect"
                app:layout_constraintBottom_toBottomOf="@id/iv_avatar_insect"/>

            <ImageView
                android:id="@+id/iv_avatar_insect"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/insect"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:importantForAccessibility="no"
                />

<!--            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_avatar_insect"
                app:layout_constraintEnd_toEndOf="parent"/>-->

            <ImageView
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/google_map"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_avatar_insect"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtv_comments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="El comentario que se realizarÃ¡ para el conteo"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtv_url_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Url:"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mtv_comments"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/mb_edit"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mb_save"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="109dp"
                android:layout_height="48dp"
                android:textStyle="bold"
                android:text="@string/save_button"
                app:layout_constraintBottom_toBottomOf="@id/mb_edit"
                app:layout_constraintEnd_toStartOf="@id/mb_edit"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mb_edit"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="109dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/edit"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/mtv_url_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>