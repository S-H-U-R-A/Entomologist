<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content_insect_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_count_insect"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="?attr/colorPrimaryContainer"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimaryContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="03" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_header_insect"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/mtv_count_insect"
            app:layout_constraintEnd_toStartOf="@id/iv_insect"
            app:layout_constraintStart_toEndOf="@id/mtv_count_insect"
            app:layout_constraintTop_toTopOf="@id/mtv_count_insect"
            tools:text="Hormiga" />

        <ImageView
            android:id="@+id/iv_insect"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_border"
            android:src="@drawable/round_image_button"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:layout_marginVertical="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAccessibility="no"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="?attr/colorOutlineVariant"
        app:dividerThickness="1dp"
        app:layout_constraintEnd_toEndOf="@id/cl_content_insect_report"
        app:layout_constraintStart_toStartOf="@id/cl_content_insect_report"
        app:layout_constraintTop_toBottomOf="@id/cl_content_insect_report" />


</androidx.constraintlayout.widget.ConstraintLayout>