<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/recordFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.pragma.entomologistapp.ui.signup.SignUpFragment"
        android:label=""
        tools:layout="@layout/fragment_sign_up" >

        <action
            android:id="@+id/action_signUpFragment_to_photoUploadFragment"
            app:destination="@id/photoUploadFragment" />

        <argument
            android:name="uri_photo"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null"/>

    </fragment>

    <fragment
        android:id="@+id/photoUploadFragment"
        android:name="com.pragma.entomologistapp.ui.profile.PhotoUploadFragment"
        android:label=""
        tools:layout="@layout/fragment_photo_upload" >

        <argument
            android:name="uri_photo"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null"/>

    </fragment>

    <fragment
        android:id="@+id/recordFragment"
        android:name="com.pragma.entomologistapp.ui.recordInsect.RecordFragment"
        android:label=""
        tools:layout="@layout/fragment_record" >

        <action
            android:id="@+id/action_recordFragment_to_formInsectFragment"
            app:destination="@id/formInsectFragment" />

        <action
            android:id="@+id/action_recordFragment_to_editInsectFragment"
            app:destination="@id/editInsectFragment" />

    </fragment>

    <fragment
        android:id="@+id/formInsectFragment"
        android:name="com.pragma.entomologistapp.ui.formInsect.FormInsectFragment"
        android:label=""
        tools:layout="@layout/fragment_form_insect" >

        <action
            android:id="@+id/action_formInsectFragment_to_countInsectFragment"
            app:destination="@id/countInsectFragment" />

    </fragment>

    <fragment
        android:id="@+id/countInsectFragment"
        android:name="com.pragma.entomologistapp.ui.countInsect.CountInsectFragment"
        android:label=""
        tools:layout="@layout/fragment_count_insect" >

        <argument
            android:name="insect"
            app:argType="com.pragma.entomologistapp.domain.model.InsectDomain"
            app:nullable="true" />

        <argument
            android:name="recordAndInsect"
            app:argType="com.pragma.entomologistapp.domain.model.RecordInsectGeolocationDomain"
            app:nullable="true" />

        <action
            android:id="@+id/action_countInsectFragment_to_recordFragment"
            app:destination="@id/recordFragment"
            app:popUpTo="@id/recordFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/editInsectFragment"
        android:name="com.pragma.entomologistapp.ui.editInsect.EditInsectFragment"
        android:label=""
        tools:layout="@layout/fragment_edit_insect" >

        <argument
            android:name="RecordAndInsect"
            app:argType="com.pragma.entomologistapp.domain.model.RecordInsectGeolocationDomain" />
        <action
            android:id="@+id/action_editInsectFragment_to_recordFragment"
            app:destination="@id/recordFragment"
            app:popUpTo="@id/recordFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_editInsectFragment_to_countInsectFragment"
            app:destination="@id/countInsectFragment" />

    </fragment>


</navigation>